server {
    listen 80;
    
    listen 443 ssl;
	ssl_certificate    /etc/nginx/cert/website.crt;
	ssl_certificate_key    /etc/nginx/cert/website.key;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name ${APP_DOMAIN};

    location / {
            proxy_pass http://app:${APP_PORT};
    }
}